            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=doorman"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "lock_method_is",
        "title": {
          "en": "Lock/unlock method !{{is|is not}}"
        },
        "args": [
