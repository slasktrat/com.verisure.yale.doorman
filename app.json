{
  "id": "com.verisure.yale.doorman",
  "sdk": 2,
  "name": {
    "en": "Yale Doorman"
  },
  "description": {
    "en": "Yale Doorman"
  },
  "category": "security",
  "version": "1.0.4",
  "compatibility": ">=1.5.3",
  "author": {
    "name": "Espen Ljosland",
    "email": "espen@ljosland.com"
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "drivers": [
    {
      "id": "doorman",
      "name": {
        "en": "Yale Doorman"
      },
      "class": "lock",
      "capabilities": [
        "locked"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/doorman/assets/images/large.png",
        "small": "/drivers/doorman/assets/images/small.png"
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "code",
              "type": "password",
              "label": {
                "en": "Door lock code"
              },
              "value": "",
              "hint": {
                "en": "The code needed to lock and unlock the door."
              }
            }
          ]
        }
      ]
    }
  ],
  "flow": {
    "triggers" : [
      {
        "id":"lock_state_changed",
        "title": {
          "en": "Lock state changed"
        },
        "tokens": [
          {
            "name": "locked",
            "type": "boolean",
            "title": {
              "en": "Locked"
            }
          },
          {
            "name": "method",
            "type": "string",
            "title": {
              "en": "How"
            },
            "example": {
              "en": "REMOTE"
            }
          },
          {
            "name": "userString",
            "type": "string",
            "title": {
              "en": "Who"
            },
            "example": {
              "en": "My Name"
            }
          }
        ],
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=doorman"
          }
        ]
      },
      {
        "id":"unlocked_by_method",
        "title": {
          "en": "Unlocked by method"
        },
        "tokens": [
          {
            "name": "method",
            "type": "string",
            "title": {
              "en": "How"
            },
            "example": {
              "en": "REMOTE"
            }
          },
          {
            "name": "userString",
            "type": "string",
            "title": {
              "en": "Who"
            },
            "example": {
              "en": "My Name"
            }
          }
        ],
        "args": [
          {
            "name": "method",
            "type": "autocomplete",
            "placeholder": {
              "en": "Method"
            }
          },
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=doorman"
          }
        ]
      },
      {
        "id":"locked_by_method",
        "title": {
          "en": "Locked by method"
        },
        "tokens": [
          {
